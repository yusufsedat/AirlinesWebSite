@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer localizer


@model WebProgramlama_Odev.Models.GuzergahModel


<html lang="en">
<head>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Guzergah.css" asp-append-version="true" />
   
         
</head>

<body>

    <div class="guzergah-form">
       
            <form asp-action="UygunUcusListesi">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
           
            <div class="form-group">
                <label for="selectedNereden">@localizer["Nereden"]</label>
                <select id="selectedNereden" name="selectedNereden" class="form-select form-select-lg mb-3">
                   
                    @foreach (var item in ViewBag.NeredenList)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="selectedNereye">@localizer["Nereye"]</label>
                <select id="selectedNereye" name="selectedNereye" class="form-select form-select-lg mb-3">
                    
                    @foreach (var item in ViewBag.NereyeList)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>

                <div class="form-group">
                <label for="Tarih" class="control-label">@localizer["Tarih"]</label>
                    <input asp-for="Tarih" type="date" class="form-control" />
                    <span asp-validation-for="Tarih" class="text-danger"></span>
                </div>
                <br />
                <br />

                <div class="form-group">
                    <input type="submit" value="@localizer["Uçuşlara Bak"]" class="btn btn-warning" />
                </div>
            </form>
        
    </div>
    <div class="btn-group-vertical position-absolute bottom-0 start-0">

                     <a class="btn btn-success" href="/?ui-culture=en-US">EN</a>
                     <a class="btn btn-success" href="/?ui-culture=tr-TR">TR</a>
               </div>
                

</body>

  
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}





